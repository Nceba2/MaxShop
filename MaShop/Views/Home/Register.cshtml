@{
    ViewData["Title"] = "Register Page";
}
<div class="row">
    <div class="col-md-12 banner"><center><h1>Max's Barber Shop</h1></center></div>
</div>
<div class="row">
    <div class="col-md-12">
        <b><h4>| @ViewData["Title"]</h4></b>
        <p>
            This is a simple Barber shop booking system.<br/>
            you can book for you hair cut and pay later,<br/>
            or pay her on the system using ipay payment system<br/>
            we get a lot of booking request so please be on time<br/>
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        
    <div class="row">
        <div class="col-md-9 overview">
        <u><h3>Register</h3></u>
        <form class="form" placeholder="Register">
            <div class="form-group">
            <input type="text" name="username" class="form-control"  placeholder="Username"/>
            </div>
            <div class="form-group">
            <input type="email" name="email" class="form-control"  placeholder="email"/>
            </div>
            <div class="form-group">
            <input type="text" name="PhoneNumber" class="form-control"  placeholder="Phone Number"/>
            </div>
            <div class="form-group">
            <input type="password" name="password" class="form-control"  placeholder="Password"/>
            </div>
            <div class="form-group">
            <input type="password" name="ConfirmPassword" class="form-control"  placeholder="Confirm Password"/>
            </div>
            <div class="form-group">
            <input type="submit" name="Register" class="btn btn-primary" value="Register"/> Or <a href="/Home/Login">Login</a>
            </div>
        </form>
        </div>
    </div>

    </div>

        
    <div class="col-md-3 overview">
        <h2>Overview</h2>
        <ul>
            <li><a href="#">Regular style</a></li>
            <li><a href="#">Specials</a></li>
            <li><a href="#">Discounts</a></li>
            <li><a href="#">Help & Support</a></li>
            <li><a href="#">Documentations</a></li>
        </ul>
    </div>
</div>

