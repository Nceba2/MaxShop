@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-12 banner"><center><h1>Max's Barber Shop</h1></center></div>
</div>
<div class="row">
    <div class="col-md-12">
        <b><h4>| @ViewData["Title"]</h4></b>
        <p>
            This is a simple Barber shop booking system.<br/>
            you can book for you hair cut and pay later,<br/>
            or pay her on the system using ipay payment system<br/>
            we get a lot of booking request so please be on time<br/>
            |@ViewData["Message"]
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-9">
        <u><h3>Styles</h3></u>
        <div class="row">
            @{
                //the HomeController will these generate values
                dynamic items = @ViewData["items"];

                //using loops to provide items on the an array to menu
                foreach(dynamic i in items)
                {
                   dynamic item = i;

                        <div class="col-md-4">
                             <img src="~/Images/Styles/@item["image"]" width="100%" height="250px"/>
                             <p>@item["name"]</p>
                             <p>R @item["price"] | <a href="#" id="bookbtn_@item["id"]" data-name="@item["name"]" data-toggle="modal" data-target="#BookerModel">Book</a></p>
                        </div>

                        <script type="text/javascript">
                            document.getElementById("bookbtn_@item["id"]").addEventListener("click", function () {

                                document.getElementById("stylename").innerHTML = "@item["name"]";
                                document.getElementById("price").innerHTML = "R @item["price"]";

                                document.getElementById("item_id").setAttribute("value",@item["id"]);       
                                document.getElementById("user_id").setAttribute("value","1");
                            });     
                        </script>

                 }//href="/Home/Booker/@item["id"]" 
                 
            }
        </div>
    </div>

    <div class="col-md-3 overview">
        <h2>Overview</h2>
        <ul>
            <li><a href="#">Regular style</a></li>
            <li><a href="#">Specials</a></li>
            <li><a href="#">Discounts</a></li>
            <li><a href="#">Help & Support</a></li>
            <li><a href="#">Documentations</a></li>
        </ul>
    </div>
</div>

